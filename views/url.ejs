<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkSnap - URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            background: #0a0e1a;
            color: #e2e8f0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
        @keyframes slideInRight { from { opacity: 0; transform: translateX(20px); } to { opacity: 1; transform: translateX(0); } }

        .animate-fadeInUp { animation: fadeInUp 0.6s ease-out; }
        .animate-slideInRight { animation: slideInRight 0.5s ease-out; }

        .stat-card {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            border: 1px solid rgba(100, 116, 139, 0.2);
            border-radius: 16px;
            padding: 24px;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            border-color: rgba(56, 189, 248, 0.4);
            box-shadow: 0 10px 30px rgba(56, 189, 248, 0.15);
        }

        .icon-box {
            width: 48px; height: 48px; background: rgba(56, 189, 248, 0.1); border-radius: 12px;
            display: flex; align-items: center; justify-content: center; margin-bottom: 16px;
        }

        .input-container {
            background: #1e293b; border: 1px solid rgba(100, 116, 139, 0.3); border-radius: 16px;
            padding: 32px; margin: 32px 0;
        }

        .url-input {
            background: #0f172a; border: 1px solid rgba(100, 116, 139, 0.3); border-radius: 12px;
            color: #e2e8f0; padding: 16px 20px; width: 100%; font-size: 15px; transition: all 0.3s ease;
        }

        .url-input:focus { outline: none; border-color: #38bdf8; box-shadow: 0 0 0 3px rgba(56, 189, 248, 0.1); }
        .url-input::placeholder { color: #64748b; }

        .btn-shorten {
            background: linear-gradient(135deg, #38bdf8 0%, #a78bfa 100%);
            border: none; border-radius: 12px; color: white; padding: 16px 32px;
            font-size: 15px; font-weight: 600; cursor: pointer; transition: all 0.3s ease;
            display: flex; align-items: center; gap: 8px;
        }

        .btn-shorten:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(56, 189, 248, 0.4);
        }

        .links-table {
            background: #1e293b; border: 1px solid rgba(100, 116, 139, 0.2); border-radius: 16px; overflow: hidden;
        }

        .table-header {
            background: rgba(15, 23, 42, 0.8); padding: 20px 24px;
            border-bottom: 1px solid rgba(100, 116, 139, 0.2);
        }

        .table-body { display: flex; flex-direction: column; overflow-x: auto; -webkit-overflow-scrolling: touch; }

        .table-row {
            padding: 20px 24px; border-bottom: 1px solid rgba(100, 116, 139, 0.1);
            transition: all 0.3s ease;
        }

        .table-row:hover { background: rgba(56, 189, 248, 0.05); }
        .table-row:last-child { border-bottom: none; }

        .table-content {
            display: grid;
            grid-template-columns: 50px 200px 1fr 100px 110px;
            align-items: center; gap: 16px; min-width: 800px;
        }

        .table-col-num { color: #64748b; font-weight: 500; }
        .table-col-original { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; color: #94a3b8; font-size: 14px; }
        .table-col-clicks { text-align: center; }
        .table-col-actions { display: flex; gap: 8px; justify-content: center; }

        .short-link { color: #38bdf8; font-weight: 500; text-decoration: none; transition: color 0.2s; }
        .short-link:hover { color: #7dd3fc; }

        .click-badge {
            background: rgba(34, 197, 94, 0.1); color: #4ade80; padding: 6px 12px;
            border-radius: 20px; font-size: 13px; font-weight: 600;
            display: inline-flex; align-items: center; gap: 4px;
        }

        .action-btn {
            width: 36px; height: 36px; background: rgba(100, 116, 139, 0.1);
            border: 1px solid rgba(100, 116, 139, 0.2); border-radius: 8px;
            display: inline-flex; align-items: center; justify-content: center;
            cursor: pointer; transition: all 0.2s; color: #94a3b8;
        }

        .action-btn:hover {
            background: rgba(56, 189, 248, 0.1); border-color: rgba(56, 189, 248, 0.3); color: #38bdf8;
        }

        .logo-icon, .user-avatar, .section-icon {
            width: 40px; height: 40px; background: linear-gradient(135deg, #38bdf8 0%, #a78bfa 100%);
            border-radius: 10px; display: flex; align-items: center; justify-content: center;
        }

        .increase-badge { color: #4ade80; font-size: 13px; font-weight: 500; }
        .empty-state { text-align: center; padding: 60px 20px; color: #64748b; }
        .section-title { display: flex; align-items: center; gap: 12px; margin-bottom: 8px; }

        @media (max-width: 768px) {
            .table-content { grid-template-columns: 40px 180px 1fr 90px 100px; gap: 12px; }
        }

        @media (max-width: 640px) {
            .table-content { grid-template-columns: 40px 160px 1fr 80px 90px; gap: 10px; font-size: 14px; }
            .click-badge { padding: 4px 8px; font-size: 12px; }
        }
    </style>
</head>

<body>
    <header class="border-b border-gray-800 px-6 py-4">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="logo-icon">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                    </svg>
                </div>
                <span class="text-xl font-bold text-white">LinkSnap</span>
            </div>
            <div class="flex items-center gap-4">
                <div class="flex flex-col items-end">
                    <span class="text-sm font-medium text-white"><%= user.name %></span>
                    <span class="text-xs text-gray-400"><%= user.email %></span>
                </div>
                <div class="user-avatar">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
                <a href="/user/logout" class="action-btn" title="Logout">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                </a>
            </div>
        </div>
    </header>

    <div class="max-w-7xl mx-auto px-6 py-8">
        
        <!-- Welcome - Emoji added safely via CSS -->
        <div class="mb-8 animate-fadeInUp">
            <h1 class="text-4xl font-bold mb-2">
                Welcome back, <span style="color: #38bdf8;"><%= user.name %></span>
                <span style="margin-left: 12px; font-size: 40px;">&#128075</span>
            </h1>
            <p class="text-gray-400 text-lg">Manage your shortened URLs and track their performance.</p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <%
            const stats = [
                { label: 'Total Links', value: urls.length, change: '+2 this week', icon: 'M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1' },
                { label: 'Total Clicks', value: urls.reduce((sum, url) => sum + url.visitHistory.length, 0), change: '+12% vs last week', icon: 'M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122' },
                { label: 'Avg. Clicks/Link', value: urls.length > 0 ? (urls.reduce((sum, url) => sum + url.visitHistory.length, 0) / urls.length).toFixed(1) : '0.0', change: '', icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z' },
                { label: 'Click Rate', value: '68%', change: '+5% improvement', icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6' }
            ];
            stats.forEach((stat, index) => {
            %>
                <div class="stat-card animate-fadeInUp" style="animation-delay: <%= index * 0.1 %>s">
                    <div class="icon-box">
                        <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= stat.icon %>"></path>
                        </svg>
                    </div>
                    <div class="text-sm text-gray-400 mb-1"><%= stat.label %></div>
                    <div class="text-3xl font-bold text-white mb-2"><%= stat.value %></div>
                    <% if (stat.change) { %>
                        <div class="increase-badge"><%= stat.change %></div>
                    <% } %>
                </div>
            <% }); %>
        </div>

        <!-- Shorten URL -->
        <div class="input-container animate-fadeInUp" style="animation-delay: 0.4s">
            <div class="section-title mb-6">
                <div class="section-icon">
                    <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"></path>
                    </svg>
                </div>
                <div>
                    <h2 class="text-xl font-bold text-white">Shorten a URL</h2>
                    <p class="text-sm text-gray-400">Paste your long URL below</p>
                </div>
            </div>
            <form action="/url" method="post" class="flex gap-4">
                <div class="flex-1">
                    <input type="text" name="url" id="url" required placeholder="https://example.com/very-long-url..." class="url-input">
                </div>
                <button type="submit" class="btn-shorten">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"></path>
                    </svg>
                    Shorten
                </button>
            </form>
        </div>

        <!-- Links Table -->
        <div class="links-table animate-fadeInUp" style="animation-delay: 0.5s">
            <div class="table-header">
                <div class="flex items-center gap-3 mb-1">
                    <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                    <span class="text-lg font-bold text-white">Your Links</span>
                </div>
                <p class="text-sm text-gray-400"><%= urls.length %> shortened URLs</p>
            </div>

            <div class="table-body">
                <div class="table-row" style="background: rgba(15, 23, 42, 0.5);">
                    <div class="table-content" style="font-size: 11px; color: #64748b; font-weight: 700; text-transform: uppercase; letter-spacing: 0.08em;">
                        <div>#</div>
                        <div>SHORT LINK</div>
                        <div>ORIGINAL URL</div>
                        <div>CLICKS</div>
                        <div style="text-align: center;">ACTIONS</div>
                    </div>
                </div>

                <% if (urls.length === 0) { %>
                    <div class="empty-state">
                        <svg class="w-16 h-16 mx-auto mb-4 opacity-20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                        </svg>
                        <p class="text-lg font-medium mb-2">No shortened URLs yet</p>
                        <p class="text-sm">Start by entering a URL above to create your first short link!</p>
                    </div>
                <% } else { %>
                    <% urls.forEach((url, idx) => { %>
                        <div class="table-row animate-slideInRight" style="animation-delay: <%= idx * 0.05 %>s">
                            <div class="table-content">
                                <div class="table-col-num"><%= idx + 1 %></div>
                                <div>
                                    <a href="/url/<%= url.shortId %>" class="short-link" target="_blank">
                                        <%= url.shortId %>
                                    </a>
                                </div>
                                <div class="table-col-original" title="<%= url.redirectURL %>">
                                    <%= url.redirectURL %>
                                </div>
                                <div class="table-col-clicks">
                                    <span class="click-badge">
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                                        </svg>
                                        <%= url.visitHistory.length %>
                                    </span>
                                </div>
                                <div class="table-col-actions">
                                    <button onclick="copyToClipboard('/url/<%= url.shortId %>')" class="action-btn" title="Copy link">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                        </svg>
                                    </button>
                                    <a href="/url/<%= url.shortId %>" target="_blank" class="action-btn" title="Visit link">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        function copyToClipboard(shortId) {
            const fullUrl = window.location.origin + shortId;
            navigator.clipboard.writeText(fullUrl).then(() => {
                const toast = document.createElement('div');
                toast.style.cssText = 'position: fixed; top: 20px; right: 20px; background: linear-gradient(135deg, #38bdf8 0%, #a78bfa 100%); color: white; padding: 16px 24px; border-radius: 12px; box-shadow: 0 10px 30px rgba(56, 189, 248, 0.4); z-index: 1000; font-weight: 500;';
                toast.textContent = 'Link copied!';
                document.body.appendChild(toast);
                setTimeout(() => toast.remove(), 2500);
            });
        }

        window.addEventListener('load', () => {
            document.body.style.opacity = '0';
            setTimeout(() => {
                document.body.style.transition = 'opacity 0.5s';
                document.body.style.opacity = '1';
            }, 50);
        });
    </script>
</body>
</html>